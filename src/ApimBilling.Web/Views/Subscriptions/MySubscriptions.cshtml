@model List<ApimBilling.Contracts.SubscriptionInfo>

@{
    ViewData["Title"] = "My Subscriptions";
    var userEmail = Context.Session.GetString("UserEmail");
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-5">My Subscriptions</h1>
            <p class="text-muted">Subscriptions for: <strong>@userEmail</strong></p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4><i class="bi bi-info-circle"></i> No subscriptions yet</h4>
            <p class="mb-0">You haven't purchased any API products yet. <a asp-controller="Products" asp-action="Index">Browse available products</a></p>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Subscription Name</th>
                                        <th>Product</th>
                                        <th>Status</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var subscription in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@subscription.SubscriptionName</strong><br/>
                                                <small class="text-muted">@subscription.SubscriptionId</small>
                                            </td>
                                            <td>@subscription.ProductName</td>
                                            <td>
                                                @if (subscription.State == "active")
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else if (subscription.State == "suspended")
                                                {
                                                    <span class="badge bg-warning">Suspended</span>
                                                }
                                                else if (subscription.State == "cancelled")
                                                {
                                                    <span class="badge bg-danger">Cancelled</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">@subscription.State</span>
                                                }
                                            </td>
                                            <td>
                                                <small>@subscription.CreatedDate.ToString("yyyy-MM-dd")</small>
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@subscription.SubscriptionId" 
                                                   class="btn btn-sm btn-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="mt-3">
        <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-grid-3x3"></i> Browse Products
        </a>
    </div>
</div>
