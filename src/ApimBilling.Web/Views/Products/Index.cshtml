@model List<ApimBilling.Contracts.Product>

@{
    ViewData["Title"] = "API Products";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-4">Available API Products</h1>
            <p class="lead">Choose a product to get started with our APIs</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-warning">
            <h4>No products available</h4>
            <p>Please check that the Billing API is running and configured correctly.</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header bg-success text-white">
                            <h5 class="card-title mb-0">@product.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@product.Description</p>
                            
                            <div class="mt-3">
                                <small class="text-muted">
                                    <strong>Product ID:</strong> @product.ProductId<br/>
                                    <strong>State:</strong> <span class="badge bg-success">@product.State</span>
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <form asp-controller="Subscriptions" asp-action="Purchase" method="post">
                                <input type="hidden" name="productId" value="@product.ProductId" />
                                <input type="hidden" name="productName" value="@product.Name" />
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="bi bi-cart-plus"></i> Purchase Access
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
