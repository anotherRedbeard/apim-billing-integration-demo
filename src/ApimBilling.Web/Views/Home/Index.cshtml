@{
    ViewData["Title"] = "Welcome";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-person-circle display-1 text-primary"></i>
                        <h2 class="mt-3">Welcome to APIM Billing Demo</h2>
                        <p class="text-muted">Enter your details to get started</p>
                    </div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="SetUser" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control form-control-lg" id="email" name="email" 
                                   placeholder="user@example.com" required />
                            <div class="form-text">This will be used to track your subscriptions</div>
                        </div>

                        <div class="mb-4">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" class="form-control form-control-lg" id="name" name="name" 
                                   placeholder="John Doe" required />
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-box-arrow-in-right"></i> Continue
                        </button>
                    </form>

                    <div class="mt-4 p-3 bg-light rounded">
                        <h6 class="text-muted mb-2"><i class="bi bi-info-circle"></i> Demo Info</h6>
                        <ul class="small mb-0">
                            <li>No actual login required - this is a demo simulation</li>
                            <li>Your info is stored in session only</li>
                            <li>Browse products and manage API subscriptions</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
