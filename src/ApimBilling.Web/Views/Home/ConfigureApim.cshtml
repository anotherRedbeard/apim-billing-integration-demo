@model ApimBilling.Web.Models.ApimInstance
@{
    ViewData["Title"] = "Configure APIM Connection";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <i class="bi bi-cloud-fill display-1 text-primary"></i>
                        <h2 class="mt-3">Configure APIM Connection</h2>
                        <p class="text-muted">Connect to your Azure API Management instance</p>
                    </div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <form asp-action="SaveApimConfig" method="post">
                        <div class="mb-4">
                            <label for="serviceName" class="form-label">
                                <i class="bi bi-gear-fill text-primary"></i> APIM Service Name
                            </label>
                            <input type="text" class="form-control form-control-lg" id="serviceName" name="serviceName" 
                                   value="@Model.ServiceName" placeholder="my-apim-instance" required />
                            <div class="form-text">The name of your Azure API Management service (e.g., my-apim-instance)</div>
                        </div>

                        <div class="mb-4">
                            <label for="resourceGroup" class="form-label">
                                <i class="bi bi-folder-fill text-primary"></i> Resource Group
                            </label>
                            <input type="text" class="form-control form-control-lg" id="resourceGroup" name="resourceGroup" 
                                   value="@Model.ResourceGroup" placeholder="my-resource-group" required />
                            <div class="form-text">The Azure resource group containing your APIM instance</div>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Note:</strong> The application will use Azure Managed Identity to connect to the specified APIM instance.
                            Ensure the backend app service has the necessary permissions.
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save"></i> Save Configuration
                            </button>
                            @if (!string.IsNullOrEmpty(Model.ServiceName))
                            {
                                <a class="btn btn-outline-secondary" asp-controller="Products" asp-action="Index">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            }
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.ServiceName))
                    {
                        <div class="mt-4 text-center">
                            <small class="text-muted">
                                Currently connected to: <strong>@Model.ServiceName</strong> (@Model.ResourceGroup)
                            </small>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
